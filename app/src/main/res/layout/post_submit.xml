<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F2565"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".PostSubmit">


    <Button
        android:id="@+id/p2submit"
        android:layout_width="191dp"
        android:layout_height="94dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#d3802f"
        android:onClick="submitButtonPageTwo"
        android:text="@string/submit"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="259dp"
        android:layout_height="78dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="28dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#d3802f"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="266dp"
        android:layout_height="71dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_weight="1"
        android:background="@drawable/fui_idp_button_background_github"
        android:backgroundTint="#d2b048"
        android:ems="10"
        android:hint="@string/namehint"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/team"
        android:layout_width="251dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_weight="1"
        android:background="@drawable/fui_idp_button_background_github"
        android:backgroundTint="#d2b048"
        android:ems="10"
        android:hint="@string/teamhint"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/match"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#d3802f"
        android:text="@string/alliance_"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/allyscore"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/match"
        android:layout_width="251dp"
        android:layout_height="77dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_weight="1"
        android:background="@drawable/fui_idp_button_background_github"
        android:backgroundTint="#d2b048"
        android:ems="10"
        android:hint="@string/matchnumber"
        android:inputType="text"
        android:maxLength="5"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#d3802f"
        android:text="@string/match"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/match"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="251dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:onClick="color"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textOff="@string/BLUE"
        android:textOn="@string/RED"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/team" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#d3802f"
        android:text="@string/team"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <TextView
        android:id="@+id/allyscore"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_weight="1.01"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:backgroundTint="#d3802f"
        android:text="@string/alliance_score"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/typescorehere"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/typescorehere"
        android:layout_width="251dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_weight=".75"
        android:backgroundTint="#000000"
        android:hint="@string/type_score_here"
        android:inputType="number"
        android:maxLength="5"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/allyscore"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton"
        tools:ignore="Autofill" />


    <EditText
        android:id="@+id/notes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#d2b048"
        android:gravity="start|top"
        android:hint="@string/enter_additional_notes_here"
        android:inputType="textMultiLine"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        app:layout_constraintBottom_toTopOf="@+id/p2submit"
        app:layout_constraintEnd_toEndOf="@+id/typescorehere"
        app:layout_constraintStart_toStartOf="@+id/typescorehere"
        app:layout_constraintTop_toBottomOf="@+id/typescorehere" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/allyscore"
        app:layout_constraintStart_toStartOf="@+id/allyscore"
        app:layout_constraintTop_toBottomOf="@+id/allyscore">

        <Switch
            android:id="@+id/ground_pickup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#d2b048"
            android:text="@string/ground_pickup"
            android:textSize="24sp" />

        <Switch
            android:id="@+id/under_trench"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#d2b048"
            android:text="@string/under_trench"
            android:textSize="24sp"
            tools:text="Under Trench" />

        <Switch
            android:id="@+id/no_movement"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#d2b048"
            android:text="@string/movement"
            android:textSize="22sp" />


        <Switch
            android:id="@+id/no_show"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#d2b048"
            android:text="@string/no_show2"
            android:textSize="24sp" />

        <Switch
            android:id="@+id/yellow_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#d2b048"
            android:text="@string/yellow_card2"
            android:textSize="24sp" />


        <Switch
            android:id="@+id/is_climb_level"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#d2b048"
            android:text="@string/was_the_climb_level"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/red_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#d2b048"
            android:text="@string/red_card2"
            android:textSize="24sp" />
    </TableLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="573dp"
        android:layout_height="73dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/darkOrange"
        android:onClick="backButton"
        android:text="Back?"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>