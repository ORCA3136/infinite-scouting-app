<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F2565"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".PostSubmit">

    <Switch
        android:id="@+id/no_show"
        android:layout_width="282dp"
        android:layout_height="54dp"
        android:text="@string/no_show"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/no_movement"
        app:layout_constraintEnd_toStartOf="@+id/ground_pickup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_card" />

    <Switch
        android:id="@+id/no_movement"
        android:layout_width="282dp"
        android:layout_height="54dp"
        android:text="@string/did_they_move"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/is_climb_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_show" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69">

        <TextView
            android:id="@+id/allyscore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:backgroundTint="#ba64a8"
            android:text="@string/alliance_score"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/typescorehere"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:hint="@string/type_score_here"
            android:inputType="number"
            android:selectAllOnFocus="true"
            tools:ignore="Autofill" />
    </LinearLayout>

    <Button
        android:id="@+id/p2submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="102dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:onClick="submitButtonPageTwo"
        android:text="@string/submit"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:text="@string/name"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/fui_idp_button_background_github"
        android:backgroundTint="#ba64a8"
        android:ems="10"
        android:hint="@string/namehint"
        android:inputType="textPersonName"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/match"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/team"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:background="@drawable/fui_idp_button_background_github"
        android:backgroundTint="#ba64a8"
        android:ems="10"
        android:hint="@string/teamhint"
        android:inputType="number"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/match"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:text="@string/alliance_"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/match"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/fui_idp_button_background_github"
        android:backgroundTint="#ba64a8"
        android:ems="10"
        android:hint="@string/matchnumber"
        android:inputType="number"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:text="@string/match"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/match"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:onClick="color"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textOff="@string/BLUE"
        android:textOn="@string/RED"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:text="@string/team"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Switch
        android:id="@+id/yellow_card"
        android:layout_width="282dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/yellow_card"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/red_card"
        app:layout_constraintEnd_toStartOf="@+id/under_trench"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.6" />

    <Switch
        android:id="@+id/red_card"
        android:layout_width="282dp"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:text="@string/red_card"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ground_pickup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow_card" />

    <Switch
        android:id="@+id/under_trench"
        android:layout_width="282dp"
        android:layout_height="51dp"
        android:layout_marginEnd="20dp"
        android:text="Under Trench?"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ground_pickup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team" />

    <Switch
        android:id="@+id/ground_pickup"
        android:layout_width="282dp"
        android:layout_height="51dp"
        android:text="Ground pickup?"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/is_climb_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toEndOf="@+id/red_card"
        app:layout_constraintTop_toBottomOf="@+id/under_trench"
        app:layout_constraintVertical_bias="1.0" />

    <Switch
        android:id="@+id/is_climb_level"
        android:layout_width="282dp"
        android:layout_height="51dp"
        android:layout_marginBottom="72dp"
        android:text="Is climb level?"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/no_show" />

</androidx.constraintlayout.widget.ConstraintLayout>