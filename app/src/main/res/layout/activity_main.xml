<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F2565"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start3"
        android:layout_width="135dp"
        android:layout_height="69dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:onClick="startButton"
        android:text="@string/start"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/pglayout"
        android:layout_width="117dp"
        android:layout_height="261dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="22dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/powerGenerator">

        <Button
            android:id="@+id/pg1"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#ba64a8"
            android:onClick="pg1"
            android:text="@string/lower"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pg2"
            style="@android:style/ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#ba64a8"
            android:onClick="pg2"
            android:text="@string/outer"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pg3"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:backgroundTint="#ba64a8"
            android:onClick="pg3"
            android:text="@string/inner"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="inner" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cplayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2829">

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="196dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/infoName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:backgroundTint="#ba64a8"
                android:text="@string/namehint"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/infoAlliance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:backgroundTint="#ba64a8"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/alliance" />

        </TableRow>

        <TableRow
            android:id="@+id/space"
            android:layout_width="220dp"
            android:layout_height="wrap_content" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/infoTeam"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:backgroundTint="#ba64a8"
                android:text="@string/teamhint"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/infoMatch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:backgroundTint="#ba64a8"
                android:text="@string/namehint"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/controlPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="39dp"
        android:text="@string/control_panel"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="87dp"
        android:layout_height="67dp"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="@+id/start3"
        app:layout_constraintTop_toBottomOf="@+id/start3" />

    <TextView
        android:id="@+id/powerGenerator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        android:text="@string/power_genenator"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pglayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/controlPanel"
        app:layout_constraintTop_toBottomOf="@+id/timer" />

    <Button
        android:id="@+id/submit"
        android:layout_width="118dp"
        android:layout_height="72dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:onClick="submitButton"
        android:text="@string/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hang"
        app:layout_constraintTop_toBottomOf="@+id/pglayout" />

    <Button
        android:id="@+id/hang"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="37dp"
        android:layout_weight="1"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:onClick="endGameHang"
        android:text="@string/endgame"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/revolution"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/revolution"
        android:layout_width="99dp"
        android:layout_height="74dp"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:onClick="revolutionButton"
        android:text="@string/spin"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hang"
        app:layout_constraintEnd_toStartOf="@+id/pglayout"
        app:layout_constraintStart_toEndOf="@+id/selection"
        app:layout_constraintTop_toBottomOf="@+id/controlPanel"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/selection"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:backgroundTint="#ba64a8"
        android:onClick="selectionButton"
        android:text="@string/color_selection"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hang"
        app:layout_constraintEnd_toStartOf="@+id/revolution"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ButtonStyle" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:backgroundTint="#002067A0"
        android:contentDescription="@string/info"
        android:onClick="helpButton"
        android:scaleType="fitCenter"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settings"
        app:layout_constraintTop_toBottomOf="@+id/submit"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <Button
        android:id="@+id/settings"
        android:layout_width="138dp"
        android:layout_height="78dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="22dp"
        android:backgroundTint="#000000"
        android:onClick="settingsButton"
        android:text="@string/settings"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hang" />

</androidx.constraintlayout.widget.ConstraintLayout>